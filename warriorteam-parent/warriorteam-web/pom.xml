	<profiles>

		<profile>
			<id>env-prod</id>
			<build>
				<plugins>

					<!-- utile uniquement si packaging avec eclipse des lors qu'on package 
						en IC sur un serveur ce probleme n'en est plus un -->
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<id>delete-hosted-compile</id>
								<phase>compile</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<inherited>true</inherited>
								<configuration>
									<tasks>
										<echo message="Suppression des compilations GXT locales ${project.name}" />
										<delete includeemptydirs="true" dir="src/main/webapp/wt" failonerror="false" />
										 <delete file="${project.build.directory}/classes/wt-external.properties"/>
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>

					<!-- GWT Maven plugin -->
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>gwt-maven-plugin</artifactId>
						<version>${gwt-maven-plugin.version}</version>
						<dependencies>
							<dependency>
								<groupId>com.google.gwt</groupId>
								<artifactId>gwt-user</artifactId>
								<version>2.5.0-rc2</version>
							</dependency>
							<dependency>
								<groupId>com.google.gwt</groupId>
								<artifactId>gwt-dev</artifactId>
								<version>2.5.0-rc2</version>
							</dependency>
						</dependencies>
						<configuration>
							<module>fr.warriorteam.warriorteam-web</module>
							<extraJvmArgs>-XX:-UseGCOverheadLimit -Xmx1024m</extraJvmArgs>
						</configuration>
						<executions>
							<execution>
								<goals>
									<goal>compile</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>